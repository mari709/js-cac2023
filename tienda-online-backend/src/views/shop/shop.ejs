<%- include('../partials/header') %>
    <main id="shop" class="container">
        <aside class="shop__filters filters" id="sidebar-product">
            <form id="filter-form" class="filters__search">
                <label for="filters__title" class="filters__title" for="search-product">Buscar producto:</label>
                <input type="text" id="search-product" name="search-product" placeholder="Buscar...">

                <div class="form-group filters__order">
                    <label class="filters__title" for="orderby">Ordenar por:</label>
                    <select id="orderby" name="orderby">
                        <option value="precio-asc">Precio (menor a mayor)</option>
                        <option value="precio-desc">Precio (mayor a menor)</option>
                        <option value="nuevo">Más nuevo</option>
                    </select>
                </div>


                <div class="filters__price">
                    <label for="filters__title">Precio:</label>
                    <input type="number" id="min-price" name="min-price" placeholder="Precio mínimo" min="0">
                    <input type="number" id="max-price" name="max-price" placeholder="Precio máximo" min="0">
                </div>
                <div class="filters__checks">
                    <fieldset>
                        <legend>Filtrar por:</legend>
                        <label for="new">
                            <input type="checkbox" id="news" name="news" value="news"> Nuevo
                        </label>
                        <label for="offers">
                            <input type="checkbox" id="offers" name="offers"> Ofertas
                        </label>
                        <label for="special-edition">
                            <input type="checkbox" id="special-edition" name="special-edition"> Edición especial
                        </label>
                        <label for="favorites">
                            <input type="checkbox" id="favorites" name="favorites"> Favoritos
                        </label>
                    </fieldset>
                </div>
                <!-- Botón de filtrar -->
                <button class="btn btn--primary" type="submit">Filtrar</button>
            </form>
        </aside>
        <section class="shop__content">
            <ul class="shop__items">
                <% data.forEach( item =>{ %>
                    <li class="shop__item">
                        <article class="card-item">
                            <a class="card-item__link" href="/shop/item/<%= item.product_id %>">
                                <picture class="card-item__cover">
                                    <span class="card-item__tag">Nuevo</span>
                                    <img class="card-item__img--front" src="<%= item.img_front %>"
                                        alt="Figura coleccionable Funko de un Stormtrooper">
                                    <img class="card-item__img--back" src="<%= item.img_back %>"
                                        alt="Figura coleccionable Funko de un Stormtrooper en caja">
                                </picture>
                                <div class="card-item__content">
                                    <p class="card-item__licence"><%= item.licence_name %></p>
                                    <h4 class="card-item__name"><%= item.product_name%></h4>
                                    <p class="card-item__price">$ <%= item.product_price %>.-</p>
                                    <p class="card-item__promo"><%= item.dues %> CUOTAS SIN INTERÉS</p>
                                </div>
                            </a>
                        </article>
                    </li>
                    <% }) %>
            </ul>
            <div class="pagination">
                <a class="pagination__link" href="#">
                    <</a>
                        <a class="pagination__link pagination__link--selected" href="#">1</a>
                        <a class="pagination__link" href="#">2</a>
                        <a class="pagination__link" href="#">3</a>
                        <a class="pagination__link" href="#">4</a>
                        <a class="pagination__link" href="#">5</a>
                        <a class="pagination__link" href="#">></a>
            </div>
        </section>
    </main>
    <%- include('../partials/footer') %>

        <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>

        </body>

        </html>