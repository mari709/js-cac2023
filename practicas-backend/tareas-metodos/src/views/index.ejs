<main>

    <h1> Tasks</h1>
    <h2>Create task</h2>

<form action="/" method="post">
<div>
  <label for="title">Name: </label>
  <input type="text" name="title" id="title" />
</div>
<button type="submit">Send</button>
</form>

<h2>List</h2>
<ul>

    <% tasks.forEach(task => { %> 
  <%- include('partials/item', { task }) %>
<% }) %>
</ul>


</main>
